<h1>添加商品</h1>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <%= form_for @product, url: admin_products_path, method: :post, do |f| %>
    <div class="form-group">
      <%= t.text_field :product_name, class: "form-control", placehold: "产品名" %>
    </div>
    <div class="form-group">
      <%= t.text_field :description, class: "form-control", placehold: "产品描述" %>
    </div>
    <div class="form-group">
      <%= t.text_field :price, class: "form-control", placehold: "价格" %>
    </div>
    <% end -%>
  </div>
  <div class="col-sm-2"></div>
</div>