
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <h1>用户登录</h1>
    <%= form_tag admin_sessions_path, method: :post do %>
      <div class="form-group">
        <%= text_field_tag :username, nil, class: "form-control", placehold: "用户名..." %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, nil, class: "form-control", placehold: "密码..." %>
      </div>
      <%= submit_tag "登录", class: "btn btn-primary" %>
      <%= link_to "注册", new_user_path %>
    <% end -%>
  </div>
  <div class="col-sm-2"></div>
</div>