<h1>Editing Cart</h1>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <h1>购物车列表</h1>
    <%= link_to "所有商品", products_path, class: "btn btn-primary" %>
    <table class="table table-hover">
      <tr>
      <th>产品名</th>
      <th>价格</th>
      <th>数量</th>
      <th>总计</th>
      <th>编辑</th>
      </tr>
      <tr>
        <td><%= Product.find(@cart.product_id).product_name %></td>
        <td>$:<%= Product.find(@cart.product_id).price %></td>
        <td>
          <a href="<%= minus_number_cart_path(@cart.id) %>"><span class="glyphicon glyphicon-minus"></span></a>
        <form action="#" method="get">
          <input type="text" name="number" value="<%= @cart.number %>" style="width:25px; height:25px" />
        </form>

          <a href="<%= add_number_cart_path(@cart.id) %>"><span class="glyphicon glyphicon-plus"></span></a>
        </td>
        <td></td>
        <td><%= link_to "删除", cart_path(@cart.id), method: :delete, class: "btn btn-default" %>
        </td>
      </tr>
      <tr>
        <td>保存</td>
        <td></td>
        <td></td>
        <td><a href="#" class="btn btn-success">结算</a></td>
      </tr>
    </table>


  </div>
  <div class="col-sm-2"></div>
</div>
