
<div class="row">
	<div class="col-sm-2"></div>
	<div class="col-sm-8">
		<h1>订单列表</h1>
		<%= link_to "我的购物车", carts_path, class: "btn btn-primary" %>
		<table class="table">
			<tr>
				<th>产品名</th>
				<th>价格</th>
				<th>数量</th>
				<th>总价</th>
				<th>收货地址</th>
				<th>编辑</th>
			</tr>
			<% @orders.each do | order | %>
			<tr>
				<td><%= Product.find(order.product_id).product_name %></td>
				<td><%= order.price %></td>
				<td><%= order.number %></td>
				<td><%= order.counts %></td>
				<td><%= order.address_id %></td>
				<td>
					<%= order.address.consignee %>
					<%= order.address.phonenumber %>
					<%= ChinaCity.get(AddressBackup.find(order.address_id).province) %>
					<%= ChinaCity.get(AddressBackup.find(order.address_id).city) %>
					<%= ChinaCity.get(AddressBackup.find(order.address_id).country) %>
					<%= order.address.description %></td>
				<td>
				<td><%= link_to "删除", order_path(order.id), method: :delete, class: "btn btn-primary" %></td>
			</tr>
			<% end -%>
		</table>
		<%= will_paginate @orders %>
	</div>
	<div class="col-sm-2"></div>
</div>